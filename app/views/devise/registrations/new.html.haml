.registration-screen
  .header-registration
    .registration-box
      .registration
        %section.registration-container
          %h2 新規会員登録
        .registration-text
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .registration-text__box
            .registration-text__contents
              %label ニックネーム
              %span 必須
              = f.text_field :nickname
            .registration-text__contents
              %label 年齢
              %span 必須
              = f.number_field :age
            .registration-text__contents
              %label Eメール
              %span 必須
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .registration-text__contents
              .form
              %label パスワード(6文字)
              %span 必須
              = f.password_field :password, autocomplete: "new-password"
            .registration-text__contents
              %label パスワード確認
              %span 必須
            = f.password_field :password_confirmation, autocomplete: "new-password"
            = f.submit "送信", class: 'registration'
      .footer-registration-box 